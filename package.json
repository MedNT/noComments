{
	"name": "nocomments",
	"displayName": "noComments",
	"description": "A VSCode extension that uses AI to automatically suggest or generate code comments based on the context and functionality of a function or method.",
	"version": "0.0.1",
	"publisher": "NaciriTaoufikMohamed",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"title": "noComments - Config Api Key",
				"command": "noComments.inputApiKey"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Your OpenAI API Key",
			"properties": {
				"noComments.apiKey": {
					"type": "string",
					"default": "",
					"description": "Your OpenAI API key"
				}
			}
		},
		"languages": [
			{
				"id": "javascript",
				"extensions": [
					".js"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "typescript",
				"extensions": [
					".ts"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/vscode": "^1.93.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^9.9.1"
	},
	"dependencies": {
		"axios": "^1.7.7",
		"node-fetch": "^2.7.0"
	}
}
